<Window x:Class="UpworkNotification.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UpworkNotification" 
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:localControles="clr-namespace:UpworkNotification.Controles"
        Title="Upwork Notification" Icon="/Resources/upwork_.ico" ShowInTaskbar="False" Height="138" Width="244"   >
    <Grid>

        <Button Content="Button" HorizontalAlignment="Left" Margin="122,61,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>


        <tb:TaskbarIcon x:Name="myNotifyIcon"
                    Visibility="Visible"  
                  IconSource="/Resources/upwork_.ico"
                  ToolTipText="hello world">
            <tb:TaskbarIcon.TrayToolTip>
                <localControles:TrayToolTip />
            </tb:TaskbarIcon.TrayToolTip>
            <tb:TaskbarIcon.TrayPopup>
                <localControles:TrayPopup/>
            </tb:TaskbarIcon.TrayPopup>
        </tb:TaskbarIcon>
    </Grid>
</Window>
